<ContextMenu
    x:Class="HELP.Resources.UserControls.SearchBoxFilterMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:HELP.Resources.UserControls"
    mc:Ignorable="d" 
    Width="150">

    <ContextMenu.Template>
        <ControlTemplate>
            <Border BorderBrush="#000000" BorderThickness="1" Background="#FFFFFF">
                <StackPanel Margin="5" Orientation="Vertical">
                    <Label FontSize="12" Loaded="Header_Loaded" />
                    <TextBox BorderThickness="2" Style="{StaticResource NumberBox}" TextChanged="FilterTextBox_TextChanged" />
                </StackPanel>
            </Border>
        </ControlTemplate>
    </ContextMenu.Template>
</ContextMenu>