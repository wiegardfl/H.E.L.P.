<UserControl x:Class="HELP.Resources.UserControls.LabeledTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HELP.Resources.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <Label Content="{Binding Label}" FontSize="12" Target="{Binding ElementName=Textfield}"/>
        <TextBox x:Name="Textfield" Padding="2" Text="{Binding Text}"/>
    </StackPanel>
</UserControl>
