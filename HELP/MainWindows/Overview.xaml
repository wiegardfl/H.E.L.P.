<Window x:Class="HELP.MainWindows.Overview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HELP.MainWindows"
        mc:Ignorable="d"
        Title="H.E.L.P." Height="1000" Width="1600" Background="#FFDCD9D9" FontSize="16">
    <Grid ShowGridLines="False">
        <Grid.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Height" Value="25"/>
                <Setter Property="Margin" Value="50 20 50 10"/>
            </Style>
            <Style TargetType="{x:Type ComboBox}">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="{x:Type GroupBox}">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="NewCaseBtn" Height="35" Content="Neuer Fall" BorderThickness="2" Click="NewCaseBtn_Click" />

        <GroupBox Grid.Column="1" Header="Priorität">
            <ComboBox>
                <ComboBox.Resources>
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </ComboBox.Resources>
                <ComboBoxItem Background="#FF0000">Stufe1</ComboBoxItem>
                <ComboBoxItem Background="#FFA500">Stufe2</ComboBoxItem>
                <ComboBoxItem Background="#FFFF00">Stufe3</ComboBoxItem>
                <ComboBoxItem Background="#00FF00">Stufe4</ComboBoxItem>
                <ComboBoxItem Background="#0000FF">Stufe5</ComboBoxItem>
            </ComboBox>
        </GroupBox>

        <GroupBox Grid.Column="2" Header="Patientenname" >
            <ComboBox>
                <ComboBoxItem>Max Mustermann</ComboBoxItem>
                <ComboBoxItem>Markus Müller</ComboBoxItem>
                <ComboBoxItem>Johanna Schmidt</ComboBoxItem>
                <ComboBoxItem>Bernd Schäfer</ComboBoxItem>
            </ComboBox>
        </GroupBox>

        <GroupBox Grid.Column="3" Header="Besucherzimmer">
            <ComboBox>
                <ComboBoxItem>Zimmer 1</ComboBoxItem>
                <ComboBoxItem>Zimmer 2</ComboBoxItem>
                <ComboBoxItem>Zimmer 3</ComboBoxItem>
                <ComboBoxItem>Zimmer 4</ComboBoxItem>
                <ComboBoxItem>Zimmer 5</ComboBoxItem>
            </ComboBox>
        </GroupBox>

        <GroupBox Grid.Column="4" Header="Status">
            <ComboBox>
                <ComboBoxItem>Im Wartezimmer</ComboBoxItem>
                <ComboBoxItem>In Behandlung</ComboBoxItem>
                <ComboBoxItem>In Beobachtung</ComboBoxItem>
                <ComboBoxItem>Entlassen</ComboBoxItem>
            </ComboBox>
        </GroupBox>
        
        <GroupBox Grid.Column="5" Header="Durchgangsnummer" >
            <Grid Margin="10" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Padding="0 0 5 3" VerticalAlignment="Center" >Suche</Label>
                <TextBox Grid.Column="1" FontSize="14" Padding="2 1" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>
        
        <ListView Name="ListViewMain" Margin="10" Grid.Row="1" Grid.ColumnSpan="99" FontSize="16">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Priorität" Width="{Binding ElementName=Column0, Path=ActualWidth}"/>
                    <GridViewColumn Header="Neubewertung" Width="{Binding ElementName=Column1, Path=ActualWidth}"/>
                    <GridViewColumn Header="Ankunft" Width="{Binding ElementName=Column2, Path=ActualWidth}"/>
                    <GridViewColumn Header="Status" Width="{Binding ElementName=Column3, Path=ActualWidth}"/>
                    <GridViewColumn Header="Durchgangsnummer" Width="{Binding ElementName=Column4, Path=ActualWidth}"/>
                    <GridViewColumn Header="Patientenname" Width="{Binding ElementName=Column5, Path=ActualWidth}"/>
                    <GridViewColumn Header="Alter" Width="{Binding ElementName=Column6, Path=ActualWidth}"/>
                    <GridViewColumn Header="Behandlungszimmer" Width="{Binding ElementName=Column7, Path=ActualWidth}"/>
                    <GridViewColumn Header="Beschwerde" Width="{Binding ElementName=Column8, Path=ActualWidth}"/>
                    <GridViewColumn Header="Diagnose" Width="{Binding ElementName=Column9, Path=ActualWidth}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid x:Name="HelperGrid" Margin="10" Grid.Row="1" Grid.ColumnSpan="99">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="120*"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="158*"/>
                <ColumnDefinition Width="167*"/>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="227*"/>
            </Grid.ColumnDefinitions>
            <Grid Name="Column0"/>
            <Grid Name="Column1"/>
            <Grid Name="Column2"/>
            <Grid Name="Column3"/>
            <Grid Name="Column4"/>
            <Grid Name="Column5"/>
            <Grid Name="Column6"/>
            <Grid Name="Column7"/>
            <Grid Name="Column8"/>
            <Grid Name="Column9"/>
        </Grid>
    </Grid>
</Window>
